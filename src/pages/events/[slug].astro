<style>
    a {
        font-family: Oswald;
        font-size: 1.5rem;
        color: var(--text-red);
        text-decoration: none;
    }

    a:hover {
        text-decoration: underline;
    }

    .singleviewsite {
        max-width: 900px;
        margin-inline: auto;
        margin-top: 3%;
    }

    .eventphoto_mobile {
        display: none;
    }

    .pinkbox {
        background-color: var(--text-pink);
        display: grid;
        grid-template-columns: 3fr 2fr;
        padding: 3%;
        gap: 50px;
        border: 1px solid var(--text-red);
        margin-top: 1%;
    }

    .topsinglegrid {
        display: grid;
        grid-template-columns: 3fr 1fr;
        margin-bottom: 7%;
    }

    .topsinglegridright {
        text-align: center;
        font-family: Sansita;
        color: var(--text-red);
    }

    .topsinglegridright img {
        margin-top: 5%;
        width: 60%;
    }

    .time {
        background-color: var(--text-lighterred);
        color: var(--text-white);
        font-family: Oswald;
        font-size: 1rem;
        padding-left: 10px;
        width: 100px;
        margin-top: 3%;
    }

    .eventphoto img {
        border: 1px solid var(--text-red);
        width: 100%;
    }


    h1 {
        font-family: Oswald;
        color: var(--text-red);
        font-size: 3rem;
        font-weight: 100;
    }

    h2 {
        font-family: Oswald;
        color: var(--text-red);
        font-size: 1.5rem;
        font-weight: 100;
    }

    .category {
        font-family: Sansita;
    }    

    p {
        font-family: Roboto;
        color: var(--text-red);
        margin-top: 3%;
        line-height: 1.5;
    }

    button {
        background-color: var(--text-red);
        border-style: none;
        color: var(--text-white);
        font-family: Roboto;
        font-size: 1rem;
        padding: 5px;
        width: 300px;
        margin-top: 7%;
        border-radius: 7px;
        border: 1px solid var(--text-red);
    }

    button:hover {
        background-color: var(--text-pink);
        border: 1px solid var(--text-red);
        color: var(--text-red);
    }

    @media (max-width: 700px) {
        .pinkbox {
        display: grid;
        grid-template-columns: 1fr;
        }
        
        .eventphoto {
            display: none;
        }

        .eventphoto_mobile {
            display: block;
            border: 1px solid var(--text-red);
            width: 100%;
        }

        button {
            margin-bottom: 5%;
        }

        .singleviewsite {
            margin-left: 2%;
            margin-right: 2%;
        }

}

</style>
